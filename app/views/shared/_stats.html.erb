<% @user ||= current_user %>
<div class="stats" style="clear: both;">

  <div>
    <a href="<%= following_user_path(@user.username) %>">
        <span id="following" class="stat">
            <%= @user.following.count %> following
        </span>
    </a>
  </div>
  <div>
    <a href="<%= followers_user_path(@user.username) %>">
        <span id="followers" class="stat">
            <%= pluralize(@user.followers.count, "follower") %>
        </span>
    </a>
  </div>

</div>