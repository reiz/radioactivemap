
    <div class="content" >
        <h1>
            <%= gravatar_for @user %>
            <%= @user.fullname %>
        </h1>
        <%= render 'follow_form' if signed_in? %>
        <% unless @user.microposts.empty? %>
            <div style="display: table;" class="microposts">
                <%= render @microposts %>
            </div>
            <%= will_paginate @microposts %>
        <% end %>
    </div>
    <div class="sidebar round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
    </div>
